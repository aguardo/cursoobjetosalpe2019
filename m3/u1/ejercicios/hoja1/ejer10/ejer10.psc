Algoritmo circulo_y_esfera
	// Introduzca el radio
	radio <- 0
	longit <- 0
	area <- 0
	volumen <- 0
	Escribir 'introduzca el radio'
	Leer radio
	longit <- 2 * 3.1416 * radio
	area <- 4 * 3.1416 * radio * radio
	volumen <- 4 / 3 * 3.1416 * radio * radio * radio
	Escribir 'La longitud de la circunferencia es $longitud'
	Escribir 'El area del circulo es $area'
	Escribir 'El volumen de la esfera es $volumen"
FinAlgoritmo

